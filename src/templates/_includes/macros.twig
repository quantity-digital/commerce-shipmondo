{% macro configWarning(setting, file) -%}
	{%- set configArray = craft.app.config.getConfigFromFile(file) -%}
	{%- if configArray[setting] is defined -%}
		{{- "Overridden by the `#{setting}` setting in the `config/#{file}.php` file." |raw }}
	{%- else -%}
		{{ false }}
	{%- endif -%}
{%- endmacro %}

{% macro readOnly(setting, file) -%}
	{%- set configArray = craft.app.config.getConfigFromFile(file) -%}
	{%- if configArray[setting] is defined -%}
		{{ true }}
	{%- else -%}
		{{ false }}
	{%- endif -%}
{%- endmacro %}
